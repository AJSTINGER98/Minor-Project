<%- include ("partials/header")%>
    <div class="container">
        <div class="row">
            <div class = "col-6"></div>
        </div>
    </div>

    <div class="container-fluid px-0">
        <div>
            <img class="img-fluid himg" src="/Images/MUJ.jpg" alt="Responsive image" style="width: 100%; height: 700px;">
        </div>
    </div>

<div style="font-size: 1.7rem;font-weight:bolder;">
    <div class="container-fluid content">
        <div class="row">
            <div class="col-6 d-flex justify-content-end">
                <div class="scroll-left-200">
                    <img class="img-thumbnail bimg" src="/Images/Supervisor.jpg">
                </div>
            </div>
            <div class="col-6 d-flex justify-content-start my-auto">
                <div class="scroll-right-200">
                    <p class="hvr-underline-from-center"><a href="#" style="color:black;text-decoration:none;">SUPERVISOR LIST</a></p>
                </div>    
            </div>
        </div>
    </div>
    <div class="container-fluid content">
        <div class="row">
            <div class="col-6 d-flex justify-content-end my-auto">
                <div class="scroll-left-600">
                    <p class="hvr-underline-from-center"><a href="#" style="color:black;text-decoration:none;">SCHOLARS DATA</a></p>
                </div>
            </div>
            <div class="col-lg-6 d-flex justify-content-start">
                <div class="scroll-right-600">
                    <img class="img-thumbnail bimg" src="/Images/Scholar.jpg">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid content">
        <div class="row">
            <div class="col-6 d-flex justify-content-end">
                <div class="scroll-left-800">
                    <img class="img-thumbnail bimg" src="/Images/Forms.jpg">
                </div>    
            </div>
            <div class="col-6 d-flex justify-content-start my-auto">
                <div class="scroll-right-800">
                    <p class="hvr-underline-from-center"><a href="#" style="color:black; text-decoration:none;" data-toggle="modal" data-target="#phdForm">PhD FORMS</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- PHD FORM MODAL -->
    <div class="modal fade" id="phdForm" tabindex="-1" role="dialog" aria-labelledby="phDFormTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="phDFormTitle"><strong>PhD Forms</strong></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row d-flex justify-content-center div-center">
                        <div class="col-sm-8 form-group">
                            <form action="/upload" method="POST" enctype="multipart/form-data">
                                <div class="custom-file h-50 mb-3">
                                    <input type="file" name="file" id="file" class="custom-file-input" accept="application/pdf" required>
                                    <label for="file" class="custom-file-label" placeholder = "Choose File"></label>
                                </div>
                                <div class="container-fluid w-100">
                                    <button class="btn btn-primary w-100" >Upload File</button>
                                </div>
                            </form>
                        </div>
                    </div>
                
                <% if(files){%> 
                    
                    <% files.forEach(function(file){%> 
                    
                    <% if(file.contentType === 'application/pdf'){%>
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row d-flex justify-content-center mb-3 w-80">
                                    <div class="embed-responsive embed-responsive-4by3">
                                        <iframe src="/form/<%= file.filename %>"  type = "<%= file.contentType%>" frameborder="4" class = "embed-responsive-item" allowfullscreen></iframe>  
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="form-group">
                                    <form action="/<%=file._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger w-100" >Delete File</button>
                                    </form>
                                </div>
                            </div>
                        </div> 
                    <%}%>
                
                    <%});%>
                
                    
                <%}else {%>
                    
                    <h1>No files found</h1>
                    
                <%}%>
                
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
          </div>
        </div>
      </div>

    <div class="container-fluid content ">
        <div class="row">
            <div class="col-6 d-flex justify-content-end my-auto">
                <div class="scroll-left-1100">
                    <p class="hvr-underline-from-center"><a href="#" style="color:black;text-decoration:none;">SEARCH SCHOLARS</a></p>
                </div>
            </div>
            <div class="col-6 d-flex justify-content-start">
                <div class="scroll-right-1100">
                    <img class="img-thumbnail bimg" src="/Images/Search.jpg">
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("partials/footer")%>
 
